{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["ES6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": ".",
    "removeComments": true,
    "typeRoots": [
      "./node_modules@types",
      "./src/@types"
    ],
    "esModuleInterop": true ,
    "strict": true ,
    "skipLibCheck": true ,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "baseUrl": ".",
  "paths": {
    "@controllers/*": ["./src/controllers/*"],
    "@models/*": ["./src/models/*"],
  }
}
